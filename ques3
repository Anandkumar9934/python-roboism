
import math

def calc(x,o,y):
    if(o=='*'):
        print(x*y)
    elif(o=='/'):
        print(x/y)
    elif(o=='+'):
        print(x+y)
    elif(o=='-'):
        print(x-y)
    else:
        print("invalid")
            
x=float(input("first number: "))
o=input("operator")
y=float(input("second number"))
calc(x,o,y)
print("invalid")
